@model IEnumerable<FitTrackr.UI.Models.DTO.ExerciseDto>

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Exercise Name</th>
            <th>Sets</th>
            <th>Reps</th>
            <th>Weight</th>
            <th>Intensity</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ExerciseName</td>
                <td>@item.Sets</td>
                <td>@item.Reps</td>
                <td>@item.WeightInKg</td>
                <td>@item.Intensity.Level</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Add" class="btn btn-primary" asp-controller="Exercises">Add Exercise</a>
</p>

