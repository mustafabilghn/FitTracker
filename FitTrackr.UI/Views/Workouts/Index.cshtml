@model IEnumerable<FitTrackr.UI.Models.DTO.WorkoutSummaryDto>
@{
    ViewData["Title"] = "Workouts";
}

<h1>Workouts</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Workout Name</th>
            <th>Workout Date</th>
            <th>Duration</th>
            <th>Location</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.WorkoutName</td>
                <td>@item.WorkoutDate</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Location.LocationName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Add" class="btn btn-primary">Create New Workout</a>
</p>

