<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="ThisPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitTrackr.MAUI.Pages.WorkoutListPage"
    BackgroundColor="#121212">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label 
                    Text="Antrenmanlarım"
                    FontSize="32"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Margin="0,10"/>

                <CollectionView 
                    x:Name="WorkoutsCollection"
                    ItemsSource="{Binding Workouts}"
                    VerticalScrollBarVisibility="Always">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems Mode="Reveal">
                                        <SwipeItem 
                                            Text="Sil"
                                            BackgroundColor="#E53935"
                                            Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.DeleteCommand}"
                                            CommandParameter="{Binding Id}" />
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Frame 
                                    Margin="0,8"
                                    CornerRadius="16"
                                    Padding="18"
                                    BackgroundColor="#1E1E1E"
                                    HasShadow="True"
                                    BorderColor="#333">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={x:Reference ThisPage},Path=BindingContext.WorkoutSelectedCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>

                                    <VerticalStackLayout Spacing="6">

                                        <Label Text="{Binding WorkoutName}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="White"/>

                                        <Label Text="{Binding WorkoutDateText}"
                                               FontSize="14"
                                               TextColor="#AAAAAA"/>

                                        <HorizontalStackLayout Spacing="15">
                                            <Border Stroke="#4CAF50"
                                                    StrokeThickness="1"
                                                    Padding="6,2"
                                                    StrokeShape="RoundRectangle 10">
                                                <Label Text="{Binding DurationMinutes,StringFormat='⏱ {0} dk'}"
                                                       FontSize="14"
                                                       TextColor="#4CAF50"/>
                                            </Border>

                                            <Border Stroke="#FF7043"
                                                    StrokeThickness="1"
                                                    Padding="6,2"
                                                    StrokeShape="RoundRectangle 10">
                                                <Label Text="{Binding Location.LocationName,StringFormat='📍 {0}'}"
                                                       FontSize="14"
                                                       TextColor="#FF7043"/>
                                            </Border>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <ActivityIndicator 
                    x:Name="LoadingIndicator"
                    IsRunning="False"
                    IsVisible="False"
                    Color="#FF7043"
                    HeightRequest="60"
                    WidthRequest="60"
                    HorizontalOptions="Center"
                    Margin="0,20"/>
            </VerticalStackLayout>
        </ScrollView>

        <Button 
            Text="+" 
            Clicked="OnAddWorkoutClicked"
            FontSize="32"
            TextColor="White"
            BackgroundColor="#FF7043"
            CornerRadius="40"
            WidthRequest="70"
            HeightRequest="70"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="20"/>
    </Grid>
</ContentPage>
