<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitTrackr.MAUI.Pages.AddExercisePage"
             BackgroundColor="#121212"
             Title="Egzersiz Ekle">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Yeni Egzersiz"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,20"/>

            <Frame CornerRadius="12"
                   BackgroundColor="#1E1E1E"
                   Padding="10"
                   HasShadow="True"
                   BorderColor="#333">
                <Entry x:Name="ExerciseNameEntry"
                       Placeholder="Egzersiz Adı"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       Keyboard="Text"/>
            </Frame>

            <Frame CornerRadius="12"
                   BackgroundColor="#1E1E1E"
                   Padding="10"
                   HasShadow="True"
                   BorderColor="#333">
                <Entry x:Name="SetsEntry"
                       Placeholder="Set Sayısı"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       Keyboard="Numeric"/>
            </Frame>

            <Frame CornerRadius="12"
                   BackgroundColor="#1E1E1E"
                   Padding="10"
                   HasShadow="True"
                   BorderColor="#333">
                <Entry x:Name="RepsEntry"
                       Placeholder="Tekrar"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       Keyboard="Numeric"/>
            </Frame>

            <Frame CornerRadius="12"
                   BackgroundColor="#1E1E1E"
                   Padding="10"
                   HasShadow="True"
                   BorderColor="#333">
                <Entry x:Name="WeightEntry"
                       Placeholder="Ağırlık (kg)"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       Keyboard="Numeric"/>
            </Frame>

            <Frame CornerRadius="12"
                   BackgroundColor="#1E1E1E"
                   Padding="10"
                   HasShadow="True"
                   BorderColor="#333">
                <Picker x:Name="IntensityPicker"
                        Title="Yoğunluk Seç"
                        TitleColor="#AAAAAA"
                        TextColor="White"
                        ItemsSource="{Binding Intensities}"
                        ItemDisplayBinding="{Binding Level}"/>
            </Frame>

            <Button Text="Kaydet"
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="Green"
                    CornerRadius="10"
                    HeightRequest="55"
                    Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>