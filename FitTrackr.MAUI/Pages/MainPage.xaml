<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitTrackr.MAUI.MainPage"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label 
                Text="Fit Tracker"
                FontSize="36"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,10"/>

            <Label 
                Text="Son Eklenen Antrenman"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="White"
                Margin="0,20,0,0"/>

            <CollectionView x:Name="WorkoutsList" Margin="0,10,0,0">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame 
                            Margin="0,8"
                            CornerRadius="16"
                            Padding="18"
                            BackgroundColor="#1E1E1E"
                            HasShadow="True"
                            BorderColor="#333">

                            <VerticalStackLayout Spacing="6">

                                <Label Text="{Binding WorkoutName}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White"/>

                                <Label Text="{Binding WorkoutDateText}"
                                       FontSize="14"
                                       TextColor="#AAAAAA"/>

                                <HorizontalStackLayout Spacing="15">
                                    <Border Stroke="#4CAF50"
                                            StrokeThickness="1"
                                            Padding="6,2"
                                            StrokeShape="RoundRectangle 10">
                                        <Label Text="{Binding DurationMinutes,StringFormat='⏱ {0} dk'}"
                                               FontSize="14"
                                               TextColor="#4CAF50"/>
                                    </Border>

                                    <Border Stroke="#FF7043"
                                            StrokeThickness="1"
                                            Padding="6,2"
                                            StrokeShape="RoundRectangle 10">
                                        <Label Text="{Binding Location.LocationName,StringFormat='📍 {0}'}"
                                               FontSize="14"
                                               TextColor="#FF7043"/>
                                    </Border>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="#FF7043"
                               HeightRequest="60"
                               WidthRequest="60"
                               HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
