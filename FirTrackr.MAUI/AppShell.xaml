<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitTrackr.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitTrackr.MAUI"
    xmlns:pages="clr-namespace:FitTrackr.MAUI.Pages"
    Title="FitTrackr.MAUI">

    <TabBar>
        <ShellContent Title="Ana Sayfa"
                      Shell.NavBarIsVisible="False"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>

        <ShellContent Title="Antrenmanlar"
                      Shell.NavBarIsVisible="False"
                      Icon="workouts.png"
                      ContentTemplate="{DataTemplate pages:WorkoutListPage}" Route="WorkoutListPage"/>
    </TabBar>
</Shell>
