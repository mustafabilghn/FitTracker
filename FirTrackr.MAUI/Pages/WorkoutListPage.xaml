<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:FitTrackr.MAUI.Models.DTO"
             x:Class="FitTrackr.MAUI.Pages.WorkoutListPage"
             Title="WorkoutListPage">
    <VerticalStackLayout>
        <Label 
            Text="Workout List"
            FontSize="24"
            HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Workouts}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:WorkoutSummaryDto">
                    <Border BackgroundColor="gray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding WorkoutName}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding WorkoutDate}" FontSize="14"/>
                            <Label Text="{Binding DurationMinutes}" FontSize="14"/>
                            <Label Text="{Binding Location.LocationName}" FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>